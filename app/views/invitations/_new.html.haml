#add_member_area.box

  - semantic_form_for :member, :url => group_memberships_path(@group), :method => :post do |form|
    = form.error_messages
    - form.inputs do
      = form.input :string, :label => "Add New Member", :hint => "Enter the email address of the person to invite."
      = form.input :role, :collection => Membership.role_options, :selected => Membership.default_role, :include_blank => false
    - form.buttons do
      = form.commit_button "Add Member"

%script{ :type => "text/javascript" }
  = format_related_users_for_autocomplete( @group )