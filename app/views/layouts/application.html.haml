!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "Untitled")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'blueprint/screen', :media => "screen, projection"
    = stylesheet_link_tag 'blueprint/print', :media => "print"
    /[if lt IE 8]
      = stylesheet_link_tag 'blueprint/ie', :media => "screen, projection"
    = stylesheet_link_tag 'formtastic', 'application'
    = yield(:head)
  
  %body
    #container.container
      #header
        #context
          - if signed_in?
            = "Welcome #{current_user.name}! Not you?"
            = link_to "Sign out", sign_out_path
          - else
            = link_to "Sign up", sign_up_path
            or
            = link_to "Sign in", sign_in_path
        - if signed_in?  
          #menu
            %ul
              %li.first= link_to "Prayers", prayers_path
              %li= link_to "Groups", groups_path
            
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}", :class => name
      
      #content.span-18
        - if show_title?
          %h1=h yield(:title)
      
        = yield
      #sidebar.span-6.last
        = yield(:sidebar)
      #footer.span-24.last
