!!! Strict
%html{html_attrs}
  
  %head
    %title
      = "PrayerThread :: #{h(yield(:title))}"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'blueprint/screen', :media => "screen, projection"
    = stylesheet_link_tag 'blueprint/print', :media => "print"
    /[if lt IE 8]
      = stylesheet_link_tag 'blueprint/ie', :media => "screen, projection"
    -# = stylesheet_link_tag 'formtastic', 'smoothness/jquery-ui', 'application'
    = stylesheet_link_tag 'formtastic', 'application'
    -# = javascript_include_tag 'jquery', 'jquery-ui.min', 'jquery.form', 'jquery.autocomplete', 'application', :cache => true
    = javascript_include_tag 'jquery', 'jquery.autocomplete', 'application', :cache => true
    = yield(:head)
  
  %body
    #container.container
      #header
        #context
          = render :partial => "/layouts/context"
        - if signed_in?
          = render :partial => "/layouts/menu"
            
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}", :class => name

      - if show_title?
        %h1=h yield(:title)

      #content.span-17.colborder
        = yield

      #sidebar.span-6.last
        = yield(:sidebar)
        = render :partial => "/layouts/feedback"
        
      #footer.span-24.last
        Copyright &copy;2010 
        = link_to "sourcescape.com", "http://sourcescape.com", :target => "_blank"
        &bull;
        We're interested in your feedback! 
        = mail_to "prayerthread@googlegroups.com", "Drop us a note"
        and let us know what you think.