!!! Mobile
%html{html_attrs}
  %head
    %title= "PrayerThread :: #{h(yield(:title))}"
    %meta{ :name => "viewport", :content => "width=320" }
    = stylesheet_link_tag 'formtastic', 'compiled/mobile'
  %body
    #header
      -# menu
        %ul.inline
          %li.first= link_to "prayers", prayers_path
          %li= link_to "groups", groups_path
      prayer
      %span> thread
    .container
      - if show_title?
        %h1
          =h yield(:title)
      = yield
