.prayer
  .body{ :style => "padding: 1em 0" }
    .avatar= image_tag @prayer.user.gravatar_url, :class => 'gravatar'
    .content
      - if @prayer.answered?
        .answer
          .actions= link_to "Edit Answer", answer_prayer_path(@prayer)
          %p
            %strong This prayer has been answered!
          = p(h(@prayer.answer))
      - @updates.each do |update|
        %p
          - if can? :modify, update
            .actions
              %ul.inline
                %li.first= link_to "edit", edit_prayer_comment_path(update.prayer, update)
                %li= link_to "delete", prayer_comment_path(update.prayer, update), :method => :delete, :confirm => "Are you sure you want to delete this update?"
          %span.date= update.created_at.strftime('%a, %b %d')
          = p(h(update.body), false)
        %hr
      %p
        %span.date= @prayer.created_at.strftime('%a, %b %d')
        = p(h(@prayer.body), false)
      
      = render :partial => "/prayers/meta", :locals => { :prayer => @prayer }
      
      %ul#activities.inline
        - if Intercession.allowed?( current_user, @prayer )
          %li.first
            = link_to "I prayed for this today", new_prayer_intercession_path(@prayer), :class => "intercede"
            = image_tag "question-small.png", :title => "Let others know that you are praying for them."
        - else
          %li.first Thanks for praying today.
          
        - if cannot?( :modify, prayer ) && Nudge.allowed?( current_user, @prayer )
          %li
            = link_to "Nudge", new_prayer_nudge_path(@prayer), :class => "nudge"
            = image_tag "question-small.png", :title => "Nudging sends a gentle reminder to come back and provide an update or answer for this prayer."
              
  .action_area
    %ul.inline
      - if can?( :edit, @prayer )
        %li.first= link_to "Share an Update", new_prayer_comment_path(@prayer)
      - else
        %li.first= link_to "Add a comment or encouragement for this prayer", new_prayer_comment_path(@prayer)
        
      - unless @prayer.answered? || @prayer.praise?
        - if can?( :edit, @prayer )
          %li= link_to "Mark as Answered", answer_prayer_path(@prayer)
        - else
          %li= link_to "Think this prayer has been answered?", answer_prayer_path(@prayer)
      
      - if can?( :edit, @prayer )
        %li= link_to "Edit the Original Prayer", edit_prayer_path(@prayer)
      - if can?( :destroy, @prayer )
        %li= link_to "Permanently Delete", @prayer, :method => :delete,                    |
          :confirm => 'Are you sure? This will permanently delete this prayer and all it\'s comments.' |

  %ul.inline.noprint
    %li.first= link_to "&larr; Back to my Prayer List", prayers_path
