- title h(@prayer.title)
.box
  :textile
    #{h @prayer.body}
%p
  Last updated
  = time_ago_in_words(@prayer.updated_at)
  ago by
  %strong= h @prayer.name
  %br  
  Shown in
  = group_list(@prayer)

%p
  - if current_user == @prayer.user
    = link_to "Edit", edit_prayer_path(@prayer)
    |
    = link_to "Destroy", @prayer, :confirm => 'Are you sure?', :method => :delete
    |
  = link_to "View All", prayers_path
