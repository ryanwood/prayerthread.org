- title "Prayers"

%table#pretty
  %tr
  - for prayer in @prayers
    %tr
      %td
        = link_to h(prayer.title), prayer
        %small= "by #{h prayer.username}"
      %td.actions
        = link_to 'Edit', edit_prayer_path(prayer)
        |
        = link_to 'Destroy', prayer, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Prayer", new_prayer_path
