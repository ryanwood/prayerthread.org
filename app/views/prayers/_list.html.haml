- if @prayers.empty?
  %p There are no prayers.
- else
  %table#prayer_list
    %tr
      %th Prayer
      %th Updated
      %th 
    %tr
    - for prayer in @prayers
      %tr
        %td.prayer
          = link_to h(prayer.title), prayer, :class => 'prayer_title'
          %br
          %span= truncate(h(prayer.body), :length => 80)
          %br
          %small= "by #{h prayer.name} in #{group_list(prayer)}"
        %td.updated= "#{time_ago_in_words(prayer.thread_updated_at)} ago"
        %td.actions
          -if prayer.user == current_user
            = link_to 'Edit', edit_prayer_path(prayer)
            |
            = link_to 'Delete', prayer, :confirm => 'Are you sure?', :method => :delete, :class => "delete"