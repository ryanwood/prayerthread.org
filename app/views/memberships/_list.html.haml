%h3 Members
%table#members_table
  %tr
    %th.gravatar 
    %th Name
    %th Email
    %th Status
    %th 
  - @memberships.each do |membership|
    - user = membership.user
    %tr
      %td.gravatar= image_tag user.gravatar_url( :size => 35 ), :class => 'gravatar'
      %td.name= h user.name
      %td.email= user.email
      %td.status
        - if user == @group.owner
          %strong Owner
        - else
          Member
      %td.actions
        - if can? :destroy, membership
          = link_to "Remove", group_membership_path(@group, membership), :method => :delete, :confirm => "This will permanently delete #{user.name} from this group. Are you sure?"